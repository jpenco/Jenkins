pipeline {
    agent any

    stages {
        stage('Monitoramento do Servidor') {
            steps {
                script {
                    echo "=== INFORMA√á√ïES DO SERVIDOR ==="
                    
                    // Uptime em dias e horas
                    def uptime = sh(script: "uptime -p | sed 's/up //'", returnStdout: true).trim()
                    echo "üïí Uptime: ${uptime}"
                    
                    // Quantidade de processadores
                    def processors = sh(script: "nproc", returnStdout: true).trim()
                    echo "‚öôÔ∏è Processadores: ${processors} n√∫cleos"
                    
                    // Mem√≥ria RAM (uso e total)
                    sh '''
                        echo "üß† Mem√≥ria RAM:"
                        free -h | awk '/Mem:/ {printf "Total: %s, Usada: %s (%.1f%%)\\n", $2, $3, $3/$2*100}'
                    '''
                    
                    // Espa√ßo em disco (uso e total)
                    sh '''
                        echo "üíæ Espa√ßo em Disco:"
                        df -h --total | grep total | awk '{printf "Total: %s, Usado: %s (%.1f%%)\\n", $2, $3, $3/$2*100}'
                    '''
                    
                    echo "============================"
                }
            }
        }
    }
    
    post {
        always {
            echo "‚úÖ Monitoramento conclu√≠do com sucesso"
        }
    }
}
